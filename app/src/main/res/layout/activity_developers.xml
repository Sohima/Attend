<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".about.Developers">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:text="Developers" />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_height="350dp"
        android:layout_alignParentTop="false"
        android:layout_width="match_parent"
        android:gravity="center"
        android:weightSum="5"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/profile1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/brochure"
                android:contentDescription="Developer1" />

            <TextView
                android:id="@+id/name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prateek Jena"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/roll1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BS17-181"
                android:textSize="18sp" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <View
            android:id="@+id/view1"
            android:layout_width="1dp"
            android:layout_height="270dp"
            android:background="#EEEEEE" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/profile2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/brochure"
                android:contentDescription="Developer2" />

            <TextView
                android:id="@+id/name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sk Md Noor Elahi"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/roll2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BS17-259"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="330dp"
        android:layout_height="1dp"
        android:background="#EEEEEE"
        android:layout_marginTop="330dp"
        android:layout_marginStart="30dp"/>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_alignParentBottom="true"
        android:layout_height="350dp"
        android:weightSum="5"
        android:gravity="center"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profile3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/brochure"
                android:contentDescription="Developer3" />

            <TextView
                android:id="@+id/name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nitish Panda"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BS17-023"
                android:textSize="18sp" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <View
            android:id="@+id/view3"
            android:layout_width="1dp"
            android:layout_height="270dp"
            android:background="#EEEEEE" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profile4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/brochure"
                android:contentDescription="Developer4" />

            <TextView
                android:id="@+id/name4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sangram Swain"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BS17-208"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>