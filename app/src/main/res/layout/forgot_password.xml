<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.attend.MainActivity">

    <RelativeLayout
        android:visibility="visible"
        android:background="@drawable/bg31"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:alpha="0.9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="#000000"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="false"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/createAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="Enter your Email Id to get password reset link"
            android:textColor="@color/white"
            android:textSize="20sp" />


        <EditText
        android:id="@+id/registered_emailid"
        android:drawablePadding="10dp"
        android:layout_marginTop="15dp"
        android:drawableStart="@drawable/email"
        android:background="@drawable/gradienteditext"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:hint="Email Id"
        android:textColorHint="#fff"
        android:drawableTint="#fff"
        />

        <Button
            android:id="@+id/forgot_button"
            android:textColor="#fff"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/gradienteditext"
            android:layout_marginTop="40dp"
            android:text="Reset Password"
            android:layout_width="155dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
</RelativeLayout>